<Page x:Class="KIP_Translator.Pages.TranslatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KIP_Translator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="383" d:DesignWidth="716"
      Title="TranslatorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="72*"/>
            <RowDefinition Height="28" MaxHeight="28" MinHeight="28"/>
            <RowDefinition Height="188*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="166*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textWrite" TextWrapping="Wrap" AcceptsReturn="False" Margin="20,3,8,6" Grid.Row="2" PreviewKeyDown="textWrite_PreviewKeyDown" />
        <TextBox x:Name="textRead" TextWrapping="Wrap" Margin="4,3,22,6" AcceptsReturn="false" Grid.Column="2" Grid.Row="2" />
        <Button x:Name="changeBtn" Content="Button" Margin="4,3,6,151" Height="34" Width="40" Grid.Column="1" Grid.Row="2" Click="changeBtn_Click"/>
        <ComboBox x:Name="inputLang" HorizontalAlignment="Right" Margin="0,4,9,0" Grid.Row="1" ItemsSource="{Binding GetLang}" SelectionChanged="inputLang_SelectionChanged" MinWidth="158">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NameLang}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox x:Name="outputLang" HorizontalAlignment="Right" Margin="0,4,22,0" Grid.Column="2" Grid.Row="1" ItemsSource="{Binding GetLang}" SelectionChanged="outputLang_SelectionChanged" MinWidth="158">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding NameLang}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Page>
