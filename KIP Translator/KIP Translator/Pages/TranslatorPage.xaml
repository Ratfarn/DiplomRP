<Page x:Class="KIP_Translator.Pages.TranslatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KIP_Translator.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TranslatorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="103*"/>
            <RowDefinition Height="114*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="443*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextWrite"  HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="306" Height="179" TextChanged="TextWrite_TextChanged" Grid.Row="0"/>
        <TextBox x:Name="TextRead" HorizontalAlignment="Center" Margin="0,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="306" Height="179" Grid.Row="1"/>
        <DataGrid x:Name="dataList" Margin="20,10,20,17" Grid.Column="1" />

    </Grid>
</Page>
